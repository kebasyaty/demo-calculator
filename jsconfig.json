{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "tests/**/*.js",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/node_modules",
    "build",
    ".vscode",
    ".nuxt",
    "coverage",
    "jspm_packages",
    "tmp",
    "temp",
    "bower_components",
    ".npm",
    ".yarn",
    "cordova",
  ]
}
